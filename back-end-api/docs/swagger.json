{
  "openapi": "3.0.0",
  "info": {
    "title": "Neo API",
    "version": "1.0.0",
    "description": "API for Neo submission"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Development server"
    }
  ],
  "paths": {
    "/hello": {
      "get": {
        "summary": "Say hello",
        "description": "Returns a hello message",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Hello! Welcome to the Neo API"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users": {
      "get": {
        "summary": "List all users",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  }
}
  